<h3 id="welcome-message">About</h3>

<div class="category container">
<%=image_tag @info.about_img.service.send(:object_for, @info.about_img.key).public_url, class:'header-img' %>
<br>
    <%=form_for @info do |f| %>
    <%= f.label :main_image_file_upload %>
    <%=f.file_field :about_img, accept: 'image/png,image/gif,image/jpeg', class:"form-control" %>
    <br>
    <%= f.label :about_text %>
    <%=f.text_area :about_text, class:"form-control" %>
    <br>
    <%=f.submit "Update About", class:"btn btn-primary btn"%>
  <%end%>
</div>

