
<h3 id="welcome-message">Project Pictures</h3>

<div class="category container">

<%@info.project_pics.each do |img|%>
  <div class="collection-of-images">
  <%=image_tag img, class:'header-img'%>
   <%= link_to 'Remove', delete_image_attachment_collections_projects_url(img.signed_id),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
  </div>
  <%end%>

    <%=form_for @info do |f| %>
    <%= f.label :upload_project_images %>
    <%=f.file_field :project_pics, multiple:true, class:"form-control", required: true %>
    <br>
    <%=f.submit "Update Project Images", class:"btn btn-primary "%>
  <%end%>
</div>